@implements IDisposable

@inherits LayoutComponentBase

@inject NavigationManager NavigationManager

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <Dropdown>
                        <DropdownToggleButton><img src="blankuser_icon.png" /></DropdownToggleButton>
                        <DropdownMenu Class="dropdown-w-lim">
                            <DropdownItem To="Account/Manage" Type="ButtonType.Link">@context.User.Identity?.Name</DropdownItem>
                            <DropdownDivider/>
                            <DropdownItem Type="ButtonType.Button">
                                <form action="Account/Logout" method="post">
                                    <AntiforgeryToken />
                                    <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                                    <button type="submit" class="nav-link">
                                        <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                                    </button>
                                </form>
                            </DropdownItem>
                        </DropdownMenu>
                    </Dropdown>
                </Authorized>
                <NotAuthorized>
                    <Dropdown>
                        <DropdownToggleButton><img src="blankuser_icon.png"/></DropdownToggleButton>
                        <DropdownMenu Class="dropdown-w-lim">
                            <DropdownItem To="Account/Login" Type="ButtonType.Link">Login</DropdownItem>
                            <DropdownItem To="Account/Register" Type="ButtonType.Link" >Register</DropdownItem>
                        </DropdownMenu>
                    </Dropdown>
                </NotAuthorized>
                
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code{
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}